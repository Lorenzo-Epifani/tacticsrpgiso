script/source = "extends CanvasLayer

@onready var info_panel = $InfoPanel  # Riferimento al pannello
@onready var type_label = $UnitInfoPanel/Label
@onready var name_label = $UnitInfoPanel/NameLabel

func _ready():
	info_panel.visible = false  # Nasconde la UI all'inizio

# Funzione per mostrare la UI con i dettagli dell'unit√†
func show_unit_info(unit):
	type_label.text = \": \" + unit.type
	name_label.text = \"HP: \" + str(unit.hp) + \" | ATK: \" + str(unit.attack)
	
	info_panel.visible = true

# Funzione per nascondere la UI quando il cursore si sposta via
func hide_unit_info():
	info_panel.visible = false
"

